{
    "version": 2,
    "builds": [
        {
            "src": "services/*/app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "docs/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/docs/(.*)",
            "dest": "/docs/$1"
        },
        {
            "src": "/users/(.*)",
            "dest": "/services/user-service/app/main.py"
        },
        {
            "src": "/tables/(.*)",
            "dest": "/services/table-service/app/main.py"
        },
        {
            "src": "/menu/(.*)", 
            "dest": "/services/menu-service/app/main.py"
        },
        {
            "src": "/orders/(.*)",
            "dest": "/services/order-service/app/main.py"
        },
        {
            "src": "/kitchen/(.*)",
            "dest": "/services/kitchen-service/app/main.py"
        },
        {
            "src": "/payments/(.*)",
            "dest": "/services/payment-service/app/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/docs/$1"
        }
    ]
}
